#!/bin/bash

if [ "$1" == "" ]; then
	echo "$0 registry-host [user] [pass]"
	exit 0
fi

user="$2"
pass=""

if [ "$2" != "" ]; then
	if [ "$3" != "" ]; then
		pass=$3
	else
		read -sp "Password: " pass
	fi
fi

echo
if [ "$user" == "" ]; then
        curl https://$1/v2/_catalog
else
	curl https://$1/v2/_catalog --user $2:$pass
fi
